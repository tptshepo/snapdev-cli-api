{
    "extends": "standard",
    "env": {
        "mocha": true
    },
    "plugins": [
        "standard",
        "promise",
        "require-path-exists",
        "mocha"
    ],
    "rules": {
        "mocha/no-exclusive-tests": "error",
        "semi": "off",
        "no-unexpected-multiline": "off",
        "no-multiple-empty-lines": "off",
        "padded-blocks": "off",
        "no-trailing-spaces": "off",
        "require-path-exists/exists": [2, {
            "extensions": [
                "",
                ".js"
            ]
        }]
    }
}